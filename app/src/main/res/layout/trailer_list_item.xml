<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <!--Displays a Play icon for trailer-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:id="@+id/iv_detail_trailer_play_icon"/>

    <!--Displays the title of the trailer-->
    <TextView
        android:id="@+id/tv_detail_trailer_title"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/iv_detail_trailer_play_icon"
        android:layout_toEndOf="@id/iv_detail_trailer_play_icon"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!--Divider for better UI-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_detail_trailer_title"
        android:background="@android:color/white" />
</RelativeLayout>